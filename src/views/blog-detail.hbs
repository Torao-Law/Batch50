<html>
  <head>
    <title>Creating Blog Page - detail</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body>
    <!-- Navbar -->
    <nav>
      <div class="nav-left">
        <ul>
          <img src="/images/logo.png" alt="logo" />
          <li>
            <a class="item-collapse" href="/">Home</a>
          </li>
          <li>
            <a class="item-collapse" href="/blog">Blog</a>
          </li>
          <li class="item-collapse">
            <a href="/testimonial">Testimonials</a>
          </li>
        </ul>
      </div>

      <div class="nav-right">
        <a class="item-collapse" href="/contact-me">Contact Me</a>
      </div>
      <div class="nav-right" id="barsmenu">
        <button class="humberger-button" onclick="openhumberger()">
          <i class="fa-solid fa-bars"></i>
        </button>
      </div>
    </nav>

    <div class="humberger-nav-container" id="humberger-nav-container">
      <a href="/index" class="humberger-active">Home</a>
      <a href="/blog">Blog</a>
      <a href="/contact-me">Contact Me</a>
    </div>
    <!-- End Navbar -->

    <!-- Blog -->
    <div class="blog-detail">
      <div class="blog-detail-container">
        <h1>{{blog.title}} | {{blog.id}}</h1>
        <div class="author">{{blog.createdAt}} | {{blog.author}}</div>
        <img src="/images/blog-img-detail.png" alt="detail" />
        <p>
          {{blog.content}}
        </p>
      </div>
    </div>
  </body>
</html>
